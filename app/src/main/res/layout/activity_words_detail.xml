<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WordsDetail"
    android:background="#C1000000">


    <TextView
        android:id="@+id/word_text"
        android:layout_width="226dp"
        android:layout_height="70dp"
        android:layout_marginTop="148dp"
        android:layout_marginEnd="12dp"
        android:backgroundTint="#8C6EB6"
        android:textColor="@color/white"
        android:textSize="20dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/textView2"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/type_text"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:layout_width="249dp"
        android:layout_height="82dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="#8C6EB6"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.435"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/def_text"
        android:layout_width="226dp"
        android:layout_height="100dp"
        android:layout_marginTop="232dp"
        android:layout_marginEnd="12dp"
        android:backgroundTint="#8C6EB6"
        android:textColor="@color/white"
        android:textSize="20dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/textView3"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/sentence_text"
        android:layout_width="226dp"
        android:layout_height="100dp"
        android:layout_marginTop="340dp"
        android:layout_marginEnd="12dp"
        android:backgroundTint="#8C6EB6"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"

        app:layout_constraintStart_toEndOf="@+id/textView6"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/synonyms_text"
        android:layout_width="226dp"
        android:layout_height="70dp"
        android:layout_marginTop="432dp"
        android:layout_marginEnd="12dp"
        android:backgroundTint="#8C6EB6"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/textView4"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/antonyms_text"
        android:layout_width="226dp"
        android:layout_height="70dp"
        android:layout_marginTop="524dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="#8C6EB6"
        android:textColor="@color/white"
        android:textSize="20dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/textView5"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/add_button"
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:backgroundTint="#3F0A49"
        android:text="ADDTOLIST"

        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/next_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="96dp"
        android:backgroundTint="#8C6EB6"

        android:text="NEXT"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView2"

        android:layout_width="110dp"
        android:layout_height="50dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="132dp"
        android:backgroundTint="#8C6EB6"
        android:gravity="center"
        android:text="Word :"
        android:textColor="#0D72DF"

        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="110dp"
        android:layout_height="50dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="36dp"
        android:text="Definition :"
        android:textColor="#0D72DF"
        android:textSize="20dp"
        android:backgroundTint="#8C6EB6"
        android:gravity="center"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="110dp"
        android:layout_height="50dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="49dp"
        android:text="Synonyms :"
        android:textColor="#0D72DF"
        android:textSize="20dp"
        android:backgroundTint="#8C6EB6"
        android:gravity="center"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="110dp"
        android:layout_height="50dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="40dp"
        android:text="Antonyms :"
        android:textColor="#0D72DF"
        android:textSize="20dp"
        android:backgroundTint="#8C6EB6"
        android:gravity="center"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="110dp"
        android:layout_height="50dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="49dp"
        android:text="Sentences :"
        android:textColor="#0D72DF"
        android:textSize="20dp"
        android:backgroundTint="#8C6EB6"
        android:gravity="center"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

</androidx.constraintlayout.widget.ConstraintLayout>